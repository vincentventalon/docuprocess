{
	"compilerOptions": {
		"strict": true,
		"module": "CommonJS",
		"target": "ES2022",
		"lib": ["ES2022"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": "."
	},
	"include": ["nodes/**/*.ts", "credentials/**/*.ts", "index.ts"],
	"exclude": ["node_modules/**", "dist/**"]
}
